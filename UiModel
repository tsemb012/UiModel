//UiModel 

class MyViewModel : ViewModel() {
    private val _text = MutableLiveData<String>("") 
    val text: LiveData<String> = _text
    private val _isLoading = MutableLiveData<Boolean>(false)//初期値False
    val isLoading:LiveData<Boolean> = _isLoading//通信中のステートを表現
    ...
}

sealed class TextState{
    data class Loaded(val text: String): TextState
    object Loading: TextState //objectは単一インスタンスのみもつクラスを作るキーワード
}